<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Base.CardView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="2dp"
            app:contentPadding="2dp"
            app:cardElevation="0.75dp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:id="@+id/cardViewPenduduk"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/list_penduduk_nik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="NIK"
                    android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionMode.Title" />

                <TextView
                    android:id="@+id/list_penduduk_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="@string/nama_penduduk"
                    android:textAppearance="@android:style/TextAppearance.Material.Widget.TabWidget" />

            </LinearLayout>
</android.support.v7.widget.CardView>
    </ScrollView>

</LinearLayout>